<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/appIconImage"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:background="@drawable/appicon_beige"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:tint="@color/mainBackgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/helpButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:background="@drawable/round_help_button_4"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/rowOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/helpButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soundOne"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_record_button_8"
            android:textAllCaps="false"
            android:text="@string/record"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soundTwo"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_record_button_8"
            android:textAllCaps="false"
            android:text="@string/record"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soundThree"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_record_button_8"
            android:textAllCaps="false"
            android:text="@string/record"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soundFour"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_record_button_8"
            android:textAllCaps="false"
            android:layout_height="90dp"
            android:text="@string/record"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/rowOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soundFive"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_record_button_8"
            android:textAllCaps="false"
            android:layout_height="90dp"
            android:text="@string/record"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soundSix"
            android:layout_weight="1"
